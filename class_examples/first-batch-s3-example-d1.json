{
    "Parameters": {
        "Account": {
            "Default": "kubex-aws",
            "Description": "AWS Account Name",
            "Type": "String"
        },
        "Region": {
            "Default": "us-east-2",
            "Description": "AWS Region",
            "Type": "String"
        },
        "RawBucketName": {
            "Default": "first-batch-raw-bucket",
            "Description": "Bucket Name",
            "Type": "String"
        }
    },
    "Resources": {
        "TrainingBucket": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "BucketName": {
                    "Fn::Join": [
                        "-",
                        [
                            {
                                "Ref": "Account"
                            },
                            {
                                "Ref": "Region"
                            },
                            {
                                "Ref": "RawBucketName"
                            }
                        ]
                    ]
                },
                "ObjectLockConfiguration": {
                    "ObjectLockEnabled": "Enabled",
                    "Rule": {
                        "DefaultRetention": {
                            "Mode": "COMPLIANCE",
                            "Years": 1
                        }
                    }
                },
                "PublicAccessBlockConfiguration": {
                    "BlockPublicAcls": false,
                    "BlockPublicPolicy": false,
                    "IgnorePublicAcls": false,
                    "RestrictPublicBuckets": false
                },
                "ObjectLockEnabled": true,
                "Tags": [
                    {
                        "Key": "Developer",
                        "Value": "Jake"
                    },
                    {
                        "Key": "Department",
                        "Value": "Eng"
                    },
                    {
                        "Key": "SupportEmail",
                        "Value": "Exxx@gamil"
                    }
                ],
                "VersioningConfiguration": {
                    "Status": "Enabled"
                }
            }
        },
        "TrainingBucketPolicy": {
            "Type": "AWS::S3::BucketPolicy",
            "Properties": {
                "Bucket": {
                    "Ref": "TrainingBucket"
                },
                "PolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Action": [
                                "s3:GetObject",
                                "s3:PutObject"
                            ],
                            "Effect": "Allow",
                            "Resource": [
                                {
                                    "Fn::GetAtt": [
                                        "TrainingBucket",
                                        "Arn"
                                    ]
                                },
                                {
                                    "Fn::Join": [
                                        "",
                                        [
                                            "arn:aws:s3:::",
                                            {
                                                "Ref": "TrainingBucket"
                                            }
                                        ]
                                    ]
                                },
                                {
                                    "Fn::Join": [
                                        "",
                                        [
                                            "arn:aws:s3:::",
                                            {
                                                "Ref": "TrainingBucket"
                                            },
                                            "/*"
                                        ]
                                    ]
                                }
                            ],
                            "Principal": "*"
                        }
                    ]
                }
            }
        }
    }
}